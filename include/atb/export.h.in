#pragma once

// This logic was borrowed (then namespaced) from the examples on the gcc wiki:
//     https://gcc.gnu.org/wiki/Visibility

// Define @PROJECT_PREFIX@_[EXPORT, IMPORT, LOCAL]
// based on the OS
#if defined _WIN32 || defined __CYGWIN__

#  ifdef __GNUC__
#    define @PROJECT_PREFIX@_EXPORT __attribute__((dllexport))
#    define @PROJECT_PREFIX@_IMPORT __attribute__((dllimport))
#  else
#    define @PROJECT_PREFIX@_EXPORT __declspec(dllexport)
#    define @PROJECT_PREFIX@_IMPORT __declspec(dllimport)
#  endif

// All symbols are hidden by default in windows
#  define @PROJECT_PREFIX@_LOCAL

#else // defined _WIN32 || defined __CYGWIN__

#  if __GNUC__ >= 4
#    define @PROJECT_PREFIX@_EXPORT __attribute__((visibility("default")))
#    define @PROJECT_PREFIX@_IMPORT __attribute__((visibility("default")))
#    define @PROJECT_PREFIX@_LOCAL __attribute__((visibility("hidden")))
#  else
#    define @PROJECT_PREFIX@_EXPORT
#    define @PROJECT_PREFIX@_IMPORT
#    define @PROJECT_PREFIX@_LOCAL
#  endif

#endif // defined _WIN32 || defined __CYGWIN__

// Define @PROJECT_PREFIX@_[PUBLIC, PRIVATE] based the following
// definitions forwarded by the build system:
// - @PROJECT_PREFIX@_IS_SHARED (If the project is a shared lib)
// - @PROJECT_PREFIX@_DO_EXPORT (If we are building it directly)
#ifdef @PROJECT_PREFIX@_IS_SHARED

// @PROJECT_PREFIX@ lib is shared (.so)
#  ifdef @PROJECT_PREFIX@_DO_EXPORT
// We are building the shared lib -> EXPORT symbols
#    define @PROJECT_PREFIX@_PUBLIC @PROJECT_PREFIX@_EXPORT
#  else
// We are linking to the shared lib -> IMPORT symbols
#    define @PROJECT_PREFIX@_PUBLIC @PROJECT_PREFIX@_IMPORT
#  endif

#  define @PROJECT_PREFIX@_PRIVATE @PROJECT_PREFIX@_LOCAL

#else // @PROJECT_PREFIX@_IS_SHARED

// @PROJECT_PREFIX@ lib is static (.a)
#  define @PROJECT_PREFIX@_PRIVATE
#  define @PROJECT_PREFIX@_PUBLIC

#endif
